class Employees{
	String names;
	static int Numberofworkers;
	Employees(String names){
	this.names = names;	
	Numberofworkers ++;
	
	
	}
	static void displaynoofworkers() {
		System.out.println( Numberofworkers+ " is the number of people wo will be working");
	}
}
class workers{
	void work() {
		System.out.println("You will be working on technical issues of this project");
	}
}
